<% include partials/header %>

<div class="container-fluid w-75 pt-5 customLogForm px-0 text-center">
  <div class="container-fluid px-0 pb-3 text-left">
    <a class="btn btn-info btn-lg" href="/home"
        ><i class="far fa-arrow-alt-circle-left fa-lg"></i> Back</a>
  </div>
  <form action="/login" method="POST" class="form-signin mx-auto">
    <h1 class="h3 mb-3">Log in</h1>
    <label for="inputUsername" class="sr-only">Username</label>
    <input
      type="text"
      id="inputUsername"
      class="form-control form-control-lg mb-2"
      placeholder="Username"
      name="username"
      autocomplete="off"
      required
      autofocus
    />
    <label for="inputPassword" class="sr-only">Password</label>
    <input
      type="password"
      id="inputPassword"
      class="form-control form-control-lg mb-3"
      placeholder="Password"
      name="password"
      required
    />
    <button class="btn btn-lg btn-info btn-block" type="submit">
      Login
    </button>
  </form>
</div>

<% include partials/footer %>
