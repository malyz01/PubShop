<% include ../partials/header %>

<div class="container-fluid w-75">
  <header class="jumbotron">
    <div class="container-fluid">
      <h1>Welcome to PubShop</h1>
      <p>Post any item you like to sell</p>
      <div>
        <a class="btn btn-info" href="/home/new">Add new item</a>
      </div>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Recent posts:</h3>
    </div>
  </div>

  <div class="row" style="display: flex; flex-wrap: wrap">
    <% items.map((item) => { %>
    <div class="col-md-3 col-sm-6 mb-4">
      <div class="card">
        <img class="card-img-top" src="<%= item.image %>" alt="pics" />
        <div class="card-body">
          <h5 class="card-title text-center"><%= item.name %></h5>
          <p class="card-text"><%= item.description %></p>
          <p class="card-text">
            <a href="/home/<%= item._id %> " class="btn btn-info">More info</a>
          </p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<% include ../partials/footer %>
